<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#F4F4F4</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlNormal">#838383</item>
        <item name="colorControlActivated">#D50000</item>
    </style>

    <style name="textViewTitle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#050505</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="textViewSeeMore">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#2979FF</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">end</item>
        <item name="android:text">@string/see_more</item>
    </style>

    <style name="textInputLayout_my_digikala">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:textColorHint">#4C4A4A</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="textInputEditText_my_digikala">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">59dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorLink">#F5001D</item>

    </style>

</resources>